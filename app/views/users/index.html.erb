<body>
    <title>Class Code</title>
    <center>
  <center><p>REGISTERED STUDENTS</p></center>
  <table>
  <tr>
    <th>Student Number</th>
    <th>First Name</th>
    <th>Middle Name</th>
    <th>Last Name</th>
    <th>Delete</th>
  </tr>

  <% @users = User.all%>
  <% @users.each do |user| %>

  <tr>
      <td> <%=user.studentnum %> </td>
      <td> <%=user.firstname %> </td>
      <td><%=user.middlename %> </td>
      <td><%=user.lastname %> </td>
      <td><%= link_to "delete", users_index_path(user), :method => :delete,:id => user.id  %></td>


    </tr>
  </tr>
  <% end %>
  </table>
</center>

<center>
<%= link_to '<button type="button">Add</button>'.html_safe, users_add_path %>&nbsp;
<%= link_to '<button type="button">Logout</button>'.html_safe, logout_path, method: :delete %>
</center>
